<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <groupId>de.urb.quagga</groupId>
    <artifactId>quagga-java</artifactId>
    <version>${version.de.urb.quagga}</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <groupId>de.urb.quagga</groupId>
  <artifactId>apps</artifactId>
  <version>${version.de.urb.quagga}</version>
  <name>Standalone applications project</name>
  <description>Standalone applications project</description>


  <dependencies>
    <dependency>
      <groupId>commons-cli</groupId>
      <artifactId>commons-cli</artifactId>
    </dependency>

    <dependency>
      <groupId>de.urb.quagga</groupId>
      <artifactId>common-weld</artifactId>
      <version>${version.de.urb.quagga}</version>
    </dependency>

    <dependency>
      <groupId>de.urb.quagga</groupId>
      <artifactId>netty-quagga</artifactId>
      <version>${version.de.urb.quagga}</version>
    </dependency>

    <dependency>
      <groupId>de.urb.quagga</groupId>
      <artifactId>snmp4j-easybox</artifactId>
      <version>${version.de.urb.quagga}</version>
    </dependency>

    <dependency> 
      <groupId>log4j</groupId> 
      <artifactId>log4j</artifactId> 
    </dependency> 
    
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-api</artifactId>
    </dependency>
    
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-ext</artifactId>
    </dependency>
    
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-log4j12</artifactId>
    </dependency>
    
  </dependencies>

  <build>
    <defaultGoal>package</defaultGoal>
    <resources>
      <resource>
        <directory>src/main/resources</directory>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>appassembler-maven-plugin</artifactId>
        <version>${version.org.codehaus.mojo.appassembler_maven_plugin}</version>
	<executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>assemble</goal>
            </goals>
            <configuration>
              <repositoryLayout>flat</repositoryLayout>
	      <extraJvmArguments>-XX:+UseConcMarkSweepGC -XX:+DisableExplicitGC -XX:CMSInitiatingOccupancyFraction=80</extraJvmArguments>
              <programs>
        	<program>
        	  <mainClass>de.urb.quagga.apps.dumper.PacketDumper</mainClass>
        	  <name>PacketDumper</name>
        	</program>
              </programs>
            </configuration>
	     </execution>
	  </executions>
      </plugin>
    </plugins>
  </build>

</project>
